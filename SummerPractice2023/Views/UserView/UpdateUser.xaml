<Page x:Class="SummerPractice2023.Views.UserView.UpdateUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SummerPractice2023.Views.UserView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateUser">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Image Source="{Binding Image}" Height="192" Width="192"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="{DynamicResource m_name}" Style="{DynamicResource TextBlockStyle}"/>
                <TextBox Text="{Binding Name}" Style="{DynamicResource TextBoxStyle}"/>
                <TextBlock Text="{DynamicResource m_family}" Style="{DynamicResource TextBlockStyle}"/>
                <TextBox Text="{Binding Family}" Style="{DynamicResource TextBoxStyle}"/>
                <TextBlock Text="{DynamicResource m_patronymic}" Style="{DynamicResource TextBlockStyle}"/>
                <TextBox Text="{Binding Patronymic}" Style="{DynamicResource TextBoxStyle}"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1">
            <Button Content="{DynamicResource m_saev}" Margin="20 4" Style="{DynamicResource State_Button}"/>
            <Button Content="{DynamicResource m_delete}" Margin="20 4" Style="{DynamicResource State_Button}"/>
        </StackPanel>
    </Grid>
</Page>
